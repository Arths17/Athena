# ============================================
# STEP 1: Create Simple Tasks
# ============================================

task my_first_task:
    greet "Welcome to my program!"
    greet "I'm learning Athera!"

# ============================================
# STEP 2: Use Variables
# ============================================

task work_with_variables:
    set name = "Your Name Here"
    set age = 25
    set hobbies = ["coding", "reading", "music"]
    greet "Variables created successfully!"

# ============================================
# STEP 3: Add Parameters (Advanced)
# ============================================

task greet_someone with person_name:
    greet "Hello, friend!"
    greet "Nice to meet you!"

task calculate_something with x, y:
    set result = 42
    greet "Calculation done!"
    return result

# ============================================
# STEP 4: Use Loops
# ============================================

task count_things:
    greet "Counting to 5:"
    repeat 5 times:
        greet "  Count!"

task process_list:
    set items = ["apple", "banana", "cherry"]
    greet "Processing items:"
    repeat each item in items:
        greet "  Processing item..."

# ============================================
# STEP 5: Add Error Handling (Advanced)
# ============================================

task safe_operation:
    protect:
        greet "Trying something..."
        # Put your risky operations here
        greet "Operation complete!"
    handle:
        greet "Oops! Error occurred, but we handled it!"

# ============================================
# STEP 6: Run Tasks in Parallel (Advanced)
# ============================================

task worker_a:
    greet "Worker A is running"
    repeat 2 times:
        greet "  Worker A working..."

task worker_b:
    greet "Worker B is running"
    repeat 2 times:
        greet "  Worker B working..."

task run_parallel_workers:
    greet "Starting parallel execution..."
    run parallel worker_a, worker_b
    greet "Both workers finished!"

